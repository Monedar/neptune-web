    "url": "git+https://github.com/transferwise/neptune.git"
  },
  "keywords": [],
  "author": {
    "name": "TransferWise",
    "url": "https://transferwise.com/"
  },
  "bugs": {
    "url": "https://github.com/transferwise/neptune/issues"
  },
  "homepage": "https://transferwise.github.io/neptune",
  "license": "MIT",
  "version": "1.0.0",
  "main": "packages/components/build/main.js",
  "contributors": [
    "Naiara Abaroa <naiara.abaroa@transferwise.com>",
    "Andrea Piras <andrea.piras@transferwise.com>",
    "Anton Dozortsev <anton.dozortsev@transferwise.com>",
    "Domonkos Horvath <domonkos.horvath@transferwise.com>",
    "Carlos Matall√≠n Civera <carlos.matallin@transferwise.com>",
    "Henrique Gusso <henrique.gusso@transferwise.com>"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@transferwise/eslint-config": "^2.1.0",
    "babel-eslint": "^10.0.3",
    "deploy-directory-on-branch-to-gh-pages": "^0.2.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "gh-pages": "^2.1.1",
    "husky": "^2.7.0",
    "lerna": "^3.16.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "prop-types": "^15.6.1",
    "lint-staged": "^9.0.2"
  },
  "scripts": {
    "start": "yarn install && yarn build && yarn dev",
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel --stream",
    "dev-new": "lerna run dev-new --parallel --stream",
    "docs:build": "lerna run docs:build",
    "docs:deploy": "lerna run docs:deploy",
    "docs:deploy-for-branch": "lerna run docs:deploy-for-branch",
    "test": "lerna run test --stream",
    "test:watch": "lerna run test:watch --stream",
    "pretest": "lerna run pretest --stream",
    "check-format": "lerna run check-format --stream",
    "fix-format": "lerna run fix-format --stream",
    "pre-release-check": "lerna run release-to-github",
    "release-to-github": "lerna run release-to-github",
    "clean": " npm-run-all clean:*",
    "clean:modules": " lerna exec -- rm -rf ./node_modules && rm -rf node_modules",
    "clean:lock": "find . -name '*.lock' -or -name '*-lock.json' -type f -delete",
    "lint:fix": "lerna run lint",
    "lint:check": "lerna run lint:check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{less,yaml,yml,json}": [
      "prettier --find-config-path --write",
      "git add"
    ]
  },
  "prettier": "@transferwise/eslint-config/.prettierrc.js"
}
